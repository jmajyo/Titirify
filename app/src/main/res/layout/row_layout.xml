<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profit"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:background="@drawable/rounded_border_row"
    tools:context="com.jmajyo.titirify.activities.ProfitActivity">
    <GridLayout
        android:id="@+id/activity_profit___grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:columnCount="3"
        >

        <TextView
            android:id="@+id/activity_profit___date_text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            tools:text="09/02"
            android:textSize="20sp"
            android:textColor="#ffff00"
            android:gravity="center"/>
        <TextView
            android:id="@+id/activity_profit___hours_text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            tools:text="11:04"
            android:textSize="20sp"
            android:textColor="#ffff00"
            android:gravity="center"/>
        <TextView
            android:id="@+id/activity_profit___money_text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            tools:text="112.95€"
            android:textSize="20sp"
            android:textColor="#ffff00"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/activity_profit___2_euros_imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/doseuro"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            />
        <ImageView
            android:id="@+id/activity_profit___1_euro_imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/uneuro"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/activity_profit___50_cent_imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cincuentacents"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/activity_profit___2_euros_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#ffff00"
            tools:text="112.95€"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/activity_profit___1_euro_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff00"
            tools:text="112.95€"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/activity_profit___50_cent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff00"
            tools:text="112.95€"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/activity_profit___20_cent_imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/veintecents"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/activity_profit___10_cent_imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/diezcent"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/activity_profit___5_cent_imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cincocents"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/activity_profit___20_cent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#ffff00"
            tools:text="112.95€"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/activity_profit___10_cent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff00"
            tools:text="112.95€"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/activity_profit___5_cent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff00"
            tools:text="112.95€"
            android:layout_gravity="center_horizontal"
            />
    </GridLayout>
    <Button
        android:id="@+id/activity_profit___hideShow_button"
        android:layout_width="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_height="30dp"
        android:background="#222222"
        android:textColor="#ffff00"
        android:layout_centerHorizontal="true"
        android:text="HIDE"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>