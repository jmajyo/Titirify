<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#888888"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        tools:context="com.jmajyo.titirify.activities.FluteDogActivity"
        android:background="#111111"
        android:layout_weight="1"

        >
        <TextView
            android:id="@+id/activity_flute_dog___total_money_text"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:text="Total amount:"
            android:textSize="30sp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#FFFF00"
            />
        <TextView
            android:id="@+id/activity_flute_dog___total_money_text_count"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            tools:text="127.34â‚¬"
            android:textSize="30sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#FFFF00"/>
        </LinearLayout>
    <GridLayout
        android:id="@+id/activity_flute_dog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        tools:context="com.jmajyo.titirify.activities.FluteDogActivity"
        android:layout_weight="5"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/activity_flute_dog___2_euros"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/doseuro"
            android:layout_marginRight="100dp"/>
        <ImageView
            android:id="@+id/activity_flute_dog___1_euros"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/uneuro"/>
        <TextView
            android:id="@+id/activity_flute_dog___2_euros_text"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="0"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textColor="#FFFF00"/>
        <TextView
            android:id="@+id/activity_flute_dog___1_euros_text"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="0"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textColor="#FFFF00"/>
        <ImageView
            android:id="@+id/activity_flute_dog___50_cent"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/cincuentacents"/>
        <ImageView
            android:id="@+id/activity_flute_dog___20_cent"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/veintecents"/>
        <TextView
            android:id="@+id/activity_flute_dog___50_cent_text"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="0"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textColor="#FFFF00"/>

        <TextView
            android:id="@+id/activity_flute_dog___20_cent_text"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="0"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textColor="#FFFF00"/>
        <ImageView
            android:id="@+id/activity_flute_dog___10_cent"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/diezcent"/>
        <ImageView
            android:id="@+id/activity_flute_dog___5_cent"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/cincocents"/>
        <TextView
            android:id="@+id/activity_flute_dog___10_cent_text"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="0"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textColor="#FFFF00"/>
        <TextView
            android:id="@+id/activity_flute_dog___5_cent_text"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="0"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textColor="#FFFF00"/>
    </GridLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/activity_flute_dog___hat_button"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Hat"
            android:textSize="25sp"
            android:background="#111111"
            android:textColor="#FFFF00"
            android:textAllCaps="false"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>
</LinearLayout>
